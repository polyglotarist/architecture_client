<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_tag "/client/buildings/#{ @building.id }", method: :patch do %>
      <div class="form-group">
        <label for="InputName">Name</label>
        <input type="text" name="name" class="form-control" id="InputName" placeholder="ex. Willis Tower" value="<%= @building.name %>">
      </div>

      <div class="form-group">
        <label for="InputAddress">Address</label>
        <input type="text" name="address" class="form-control" id="InputAddress" placeholder="ex. 233 S Wacker Dr, Chicago, IL 60606" value="<%= @building.address %>">
      </div>

      <div class="form-group">
        <label for="InputHeight">Height</label>
        <input type="text" name="height" class="form-control" id="InputHeight" placeholder="ex. 1453" value="<%= @building.height %>">
      </div>

      <div class="form-group">
        <label for="InputConstructionDate">Construction Date</label>
        <input type="text" name="construction_date" class="form-control" id="InputConstructionDate" placeholder="ex. 1970" value="<%= @building.construction_date %>">
      </div>

      <div class="form-group">
        <label for="InputArchitect">Architect</label>
        <input type="text" name="architect" class="form-control" id="InputArchitect" placeholder="ex. Raymond Hood, John Mead Howells, John Vinci" value="<%= @building.architect %>">
      </div>
      
      <input type="submit" class="btn btn-gold" value="Update Building" />
    <% end %>
  </div>
</div>